@model ML.Sucursal
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class=row>
        <div class="text-center">
            <h2>Sucursal-Producto</h2>
        </div>
    </div>

    @if (Model != null)
    {
        @using (Html.BeginForm("GetAllProductos", "SucursalProducto", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="row">
                <div class="col-md-6">
                    @Html.DropDownListFor(m => Model.IdSucursal, new SelectList(Model.Sucurales, "IdSucursal", "Nombre"),"Selecciona un Sucursal",new { @class = "form-control", @id = "ddlDepartamento" })
                </div>
                <div class="col-md-1">
                    <input type="submit" class="btn btn-info" value="Buscar" />
                </div>
            </div>
        }
    }

</div>

<script src="~/Scripts/jquery-3.4.1.js"></script>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">