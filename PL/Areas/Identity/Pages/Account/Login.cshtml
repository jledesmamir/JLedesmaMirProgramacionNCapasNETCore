@page
@model LoginModel

@{
    Layout = null;
    ViewData["Title"] = "Log in";
}

<link type="text/css" href="~/css/LoginRegisterStyle.css" rel="stylesheet"></link>

<div class="container">
    <div class="screen">
        <section class="screen__content">
            <form id="account" method="post" class="login">
                @*<h2>Use a local account to log in.</h2>*@
                <h1 class="h1">@ViewData["Title"]</h1>
                <hr/>
                <br>
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <label asp-for="Input.Email" class="login__field">Email</label>
                    <br>
                    <input asp-for="Input.Email" type="text" class="login__input" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <br>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <label asp-for="Input.Password" class="login__field">Password</label>
                    <br>
                    <input asp-for="Input.Password" type="password" class="login__input" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
@*                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>*@
                <div>
                    <button id="login-submit" type="submit" class="login__submit">Log in</button>
                </div>
@*                <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>
                </div>*@
            </form>
        </section>
        <div class="screen__background">
            <span class="screen__background__shape screen__background__shape4"></span>
            <span class="screen__background__shape screen__background__shape3"></span>
            <span class="screen__background__shape screen__background__shape2"></span>
            @*<span class="screen__background__shape screen__background__shape1"></span>*@
        </div>
    </div>
