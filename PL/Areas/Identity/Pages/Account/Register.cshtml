@page
@model RegisterModel
@{
    Layout = null;
    ViewData["Title"] = "Register";
}
<link type="text/css" href="~/css/LoginRegisterStyle.css" rel="stylesheet"></link>

<div class="containerA">
    <div class="screenA">
        <section class="screen__content">
            <form class="register" id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h1>@ViewData["Title"]</h1>
            @*<h2>Create a new account.</h2>*@
            <hr />
            <br>
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <label asp-for="Input.Email" class="login__field2">Email</label>
                <br/>
                <input asp-for="Input.Email" class="login__input2" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <label asp-for="Input.Password" class="login__field2">Password</label>
                <input asp-for="Input.Password" class="login__input2" autocomplete="new-password" aria-required="true" placeholder="password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <label asp-for="Input.ConfirmPassword" class="login__field2">Confirm Password</label>
                <input asp-for="Input.ConfirmPassword" class="login__input2" autocomplete="new-password" aria-required="true" placeholder="password" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
                <button id="registerSubmit" type="submit" class="login__submit">Register</button>
        </form>
        </section>
        <div class="screen__background">
            <span class="screen__background__shape screen__background__shape1A"></span>
        </div>
    </div>
